{
  "compilerOptions": {
    "target": "ES2020",
    "module": "CommonJS",
    "lib": ["ES2020", "DOM"],
    "rootDirs": ["./src", "./test"],
    "outDir": "build",
    "strict": true,
    "esModuleInterop": true,
    "moduleResolution": "Node",
    "resolveJsonModule": true,
    "types": ["node", "ejs", "jest"]
  },
  "include": ["src", "test"]
}