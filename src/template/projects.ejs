<!DOCTYPE html>
<html lang="es">

<head>
    <meta charset="UTF-8" />
    <title>Proyectos</title>
    <link href="https://cdn.jsdelivr.net/npm/bootstrap@5.3.2/dist/css/bootstrap.min.css" rel="stylesheet">
    <link href="/css/app.css" rel="stylesheet" />
    <link href="/css/BgAnimation.css" rel="stylesheet" />
</head>

<body>
    <div className="bg-animation">
        <div id="stars"></div>
    </div>
    <%- include('menu') %>

        <main class="container py-4">
            <h1 class="mb-3">Proyectos Integradores</h1>

            <form class="row g-2 mb-3" method="get" action="/projects/v1.0/list">
                <div class="col-md-10">
                    <input name="q" value="<%= q || '' %>" type="search" class="form-control"
                        placeholder="Buscar por t√≠tulo, fecha, docente, materia o integrante‚Ä¶" />
                </div>
                <div class="col-md-2 d-flex gap-2">
                    <button class="btn btn-primary w-100" type="submit">Buscar</button>
                    <% if (q) { %>
                        <a class="btn btn-secondary w-100" href="/projects/v1.0/list">Limpiar</a>
                        <% } %>
                </div>
            </form>
            <div class="buscador">
                <div class="d-flex justify-content-between align-items-center mb-2">
                    <h3 class="mb-0">Resultados</h3>
                    <small class="text-muted">
                        <%= total %> resultados
                    </small>
                </div>
            </div>
            <div class="row">
                <% projects.forEach(p=> { %>
                    <div class="col-md-4 mb-3">
                        <article class="project-card" tabindex="0">
                            <% const favNames=(p.favoritos || []).map(f=> f.docente).filter(Boolean); %>
                                <% const hasFavAudio=(p.favoritos || []).some(f=> !!f.audio); %>
                                    <% if (favNames.length) { %>
                                        <div class="fav-ribbon">
                                            <span>
                                                Favorito del docente
                                                
                                            <% if (hasFavAudio) { %> üîä <% } %>
                                        ‚ù§Ô∏è
                                            </span>
                                        </div>
                            <% } %>


                            <div class="title-chip">
                                <%= p.nombre %>
                            </div>
                            <div class="logo-wrap">
                                <img src="<%= p.imagen_logo %>" alt="<%= p.nombre %>" class="logo-img"
                                    onerror="this.onerror=null; this.src=' /img/placeholder-logo.png';" />
                                        </div>
                                        <div class="hover-info">
                                            <div>
                                                <a class="badge-materia link-unstyled"
                                                    href="/courses/<%= encodeURIComponent(p.materia || 'Proyecto Integrador') %>">
                                                    <%= p.materia || 'Proyecto Integrador' %>
                                                </a>

                                                <p class="mt-2">
                                                    <%= p.resumen %>
                                                </p>
                                            </div>
                                            <div class="meta">
                                                <% if (p.docente) { %><span class="chip">Docente: <%= p.docente %>
                                                            </span>
                                                    <% } %>
                                                        <% if (p.integrantes && p.integrantes.length) { %>
                                                            <span class="chip">
                                                                <%= p.integrantes.length %> integrantes
                                                            </span>
                                                            <% } %>
                                            </div>
                                        </div>
                                        <div class="card-footer">
                                            <small class="date">
                                                <%= p.fecha || '' %>
                                            </small>
                                            <a class="btn btn-primary btn-sm" href="/projects/v1.0/<%= p.id %>">Ver
                                                m√°s</a>
                                        </div>
                        </article>
                    </div>
                    <% }) %>
            </div>

            <nav aria-label="Paginaci√≥n">
                <ul class="pagination">
                    <% const mk=(n)=> (q ? `/projects/v1.0/list?q=${encodeURIComponent(q)}&page=${n}` :
                        `/projects/v1.0/list?page=${n}`); %>
                        <li class="page-item <%= page <= 1 ? 'disabled' : '' %>">
                            <a class="page-link" href="<%= mk(page - 1) %>">Anterior</a>
                        </li>
                        <% for (let i=1; i <=totalPages; i++) { %>
                            <li class="page-item <%= i === page ? 'active' : '' %>">
                                <a class="page-link" href="<%= mk(i) %>">
                                    <%= i %>
                                </a>
                            </li>
                            <% } %>
                                <li class="page-item <%= page >= totalPages ? 'disabled' : '' %>">
                                    <a class="page-link" href="<%= mk(page + 1) %>">Siguiente</a>
                                </li>
                </ul>
            </nav>
        </main>

</body>

</html>