<!DOCTYPE html>
<html lang="es">

<head>
  <meta charset="UTF-8" />
  <title>
    <%= title %>
  </title>
  <link href="https://cdn.jsdelivr.net/npm/bootstrap@5.3.2/dist/css/bootstrap.min.css" rel="stylesheet">
  <link href="/css/app.css" rel="stylesheet" />
  <link href="/css/BgAnimation.css" rel="stylesheet" />
</head>

<body>
  <div className="bg-animation">
    <div id="stars"></div>
  </div>
  <%- include('menu') %>
    <main class="container py-4">
      <h1 class="mb-3">Cursos / Materias</h1>
      <div class="row">
        <% materias.forEach(m=> { %>
          <div class="col-md-4 mb-3">
            <a class="card card-link p-3 bg-dark text-decoration-none" href="/courses/<%= encodeURIComponent(m) %>">
              <strong class="text-light">
                <%= m %>
              </strong>
              <span class="text-muted d-block">Ver proyectos</span>
            </a>
          </div>
          <% }) %>
      </div>
    </main>
</body>

</html>