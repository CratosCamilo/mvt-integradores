<!DOCTYPE html>
<html lang="es">

<head>
    <meta charset="UTF-8" />
    <title>
        <%= title %>
    </title>
    <link href="https://cdn.jsdelivr.net/npm/bootstrap@5.3.2/dist/css/bootstrap.min.css" rel="stylesheet">
    <link href="/css/app.css" rel="stylesheet" />
    <link href="/css/BgAnimation.css" rel="stylesheet" />
</head>

<body>
    <div className="bg-animation">
        <div id="stars"></div>
    </div>
    <%- include('menu') %>

        <main class="container py-4">
            <div class="d-flex align-items-center justify-content-between mb-3">
                <h1 class="mb-0">
                    <%= materia %>
                </h1>
                <a href="/courses" class="btn btn-secondary">Volver</a>
            </div>

            <form class="row g-2 mb-3" method="get" action="">
                <div class="col-md-6">
                    <select name="docente" class="form-select">
                        <option value="">Todos los docentes</option>
                        <% docentes.forEach(d=> { %>
                            <option value="<%= d %>" <%=(docente===d ? 'selected' : '' ) %>><%= d %>
                            </option>
                            <% }) %>
                    </select>
                </div>
                <div class="col-md-2">
                    <button class="btn btn-primary w-100" type="submit">Filtrar</button>
                </div>
                <% if (docente) { %>
                    <div class="col-md-2">
                        <a class="btn btn-outline-light w-100"
                            href="/courses/<%= encodeURIComponent(materia) %>">Limpiar</a>
                    </div>
                    <% } %>
            </form>

            <div class="row">
                <% projects.forEach(p=> { %>
                    <div class="col-md-4 mb-3">
                        <article class="project-card position-relative" tabindex="0">
                            <% const favNames=(p.favoritos || []).map(f=> f.docente).filter(Boolean); %>
                                <% const hasFavAudio=(p.favoritos || []).some(f=> !!f.audio); %>
                                    <% if (favNames.length) { %>
                                        <div class="fav-ribbon">
                                            <span>
                                                Favorito del docente

                                                <% if (hasFavAudio) { %> üîä <% } %>
                                                        ‚ù§Ô∏è
                                            </span>
                                        </div>
                                        <% } %>
                                            <div class="title-chip">
                                                <%= p.nombre %>
                                            </div>

                                            <div class="logo-wrap">
                                                <img class="logo-img" src="<%= p.imagen_logo %>" alt="<%= p.nombre %>"
                                                    onerror="this.onerror=null; this.src=' /img/placeholder-logo.png';" />
                                            </div>
                                            <div class="hover-info">
                                                <div>
                                                    <a class="badge-materia link-unstyled"
                                                        href="/courses/<%= encodeURIComponent(p.materia || 'Proyecto Integrador') %>">
                                                        <%= p.materia || 'Proyecto Integrador' %>
                                                    </a>

                                                    <p class="mt-2">
                                                        <%= p.resumen %>
                                                    </p>
                                                </div>

                                                <div class="meta">
                                                    <% if (p.docente) { %>
                                                        <span class="chip">Docente: <%= p.docente %></span>
                                                        <% } %>
                                                            <% if (p.integrantes && p.integrantes.length) { %>
                                                                <span class="chip">
                                                                    <%= p.integrantes.length %> integrantes
                                                                </span>
                                                                <% } %>
                                                </div>


                                            </div>

                                            <!-- Footer visible siempre -->
                                            <div class="card-footer">
                                                <small class="date">
                                                    <%= p.fecha || '' %>
                                                </small>
                                                <a class="btn btn-primary btn-sm" href="/projects/v1.0/<%= p.id %>">Ver
                                                    m√°s</a>
                                            </div>
                        </article>
                    </div>
                    <% }) %>
            </div>
        </main>
</body>

</html>