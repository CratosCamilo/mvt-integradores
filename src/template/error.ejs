<!DOCTYPE html>
<html lang="es">
<head>
  <meta charset="UTF-8" />
  <title>Error</title>
  <link href="https://cdn.jsdelivr.net/npm/bootstrap@5.3.2/dist/css/bootstrap.min.css" rel="stylesheet">
  <link href="/css/app.css" rel="stylesheet" />
  <link href="/css/BgAnimation.css" rel="stylesheet" />
  <script src="https://cdnjs.cloudflare.com/ajax/libs/lottie-web/5.12.2/lottie.min.js" defer></script>

  <style>
    
    #lottie404 {
      width: min(520px, 90vw);
      aspect-ratio: 1 / 1; 
      margin-inline: auto;
    }    
    main.container {
      min-height: 70vh;
    }
  </style>
</head>

<body>
  <div class="bg-animation">
    <div id="stars"></div>
  </div>

  <%- include('menu') %>

  <main class="container py-5 d-flex justify-content-center align-items-center">
    <section class="text-center">
      <div id="lottie404" aria-hidden="true"></div>

     

      <a class="btn btn-dark px-4" href="/">Volver al inicio</a>
    </section>
  </main>

  <script>
    document.addEventListener('DOMContentLoaded', function () {
      lottie.loadAnimation({
        container: document.getElementById('lottie404'),
        renderer: 'svg',
        loop: true,
        autoplay: true,
        path: '/assets/404error.json' 
      });
    });
  </script>
</body>
</html>
